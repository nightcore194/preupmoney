<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_sky">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">
        <TextView
            android:id="@+id/user_hello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hi_username"
            android:textColor="@color/main_light_font_and_elem"
            android:textSize="30sp"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.06" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.15"
            app:srcCompat="@drawable/user_circle_big" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3"
            app:srcCompat="@drawable/lock"
            />

        <Button
            android:id="@+id/one"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:textColor="@color/main_light_font_and_elem"
            android:backgroundTint="@color/blue_sky"
            android:text="1"
            android:textStyle="bold"
            android:textSize="38sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.4"
            app:layout_constraintHorizontal_bias="0.32"
            style="?android:attr/borderlessButtonStyle"/>

        <Button
            android:id="@+id/two"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:textColor="@color/main_light_font_and_elem"
            android:backgroundTint="@color/blue_sky"
            android:text="2"
            android:textStyle="bold"
            android:textSize="38sp"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.4"
            app:layout_constraintHorizontal_bias="0.5"
            style="?android:attr/borderlessButtonStyle"/>

        <Button
            android:id="@+id/three"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:textColor="@color/main_light_font_and_elem"
            android:backgroundTint="@color/blue_sky"
            android:text="3"
            android:textStyle="bold"
            android:textSize="40sp"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.4"
            app:layout_constraintHorizontal_bias="0.68"
            style="?android:attr/borderlessButtonStyle"/>

        <Button
            android:id="@+id/four"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:textColor="@color/main_light_font_and_elem"
            android:backgroundTint="@color/blue_sky"
            android:text="4"
            android:textStyle="bold"
            android:textSize="40sp"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintHorizontal_bias="0.32"
            style="?android:attr/borderlessButtonStyle"/>

        <Button
            android:id="@+id/five"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:textColor="@color/main_light_font_and_elem"
            android:backgroundTint="@color/blue_sky"
            android:text="5"
            android:textStyle="bold"
            android:textSize="40sp"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintHorizontal_bias="0.5"
            style="?android:attr/borderlessButtonStyle"/>

        <Button
            android:id="@+id/six"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:textColor="@color/main_light_font_and_elem"
            android:backgroundTint="@color/blue_sky"
            android:text="6"
            android:textStyle="bold"
            android:textSize="40sp"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintHorizontal_bias="0.68"
            style="?android:attr/borderlessButtonStyle"/>

        <Button
            android:id="@+id/seven"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:textColor="@color/main_light_font_and_elem"
            android:backgroundTint="@color/blue_sky"
            android:text="7"
            android:textStyle="bold"
            android:textSize="40sp"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.6"
            app:layout_constraintHorizontal_bias="0.32"
            style="?android:attr/borderlessButtonStyle"/>

        <Button
            android:id="@+id/eight"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:textColor="@color/main_light_font_and_elem"
            android:backgroundTint="@color/blue_sky"
            android:text="8"
            android:textStyle="bold"
            android:textSize="40sp"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.6"
            app:layout_constraintHorizontal_bias="0.5"
            style="?android:attr/borderlessButtonStyle"/>

        <Button
            android:id="@+id/nine"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:textColor="@color/main_light_font_and_elem"
            android:backgroundTint="@color/blue_sky"
            android:text="9"
            android:textStyle="bold"
            android:textSize="40sp"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.6"
            app:layout_constraintHorizontal_bias="0.68"
            style="?android:attr/borderlessButtonStyle"/>

        <Button
            android:id="@+id/zero"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:textColor="@color/main_light_font_and_elem"
            android:backgroundTint="@color/blue_sky"
            android:text="0"
            android:textStyle="bold"
            android:textSize="40sp"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.7"
            app:layout_constraintHorizontal_bias="0.5"
            style="?android:attr/borderlessButtonStyle"/>

        <ImageButton
            android:id="@+id/delete"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@color/blue_sky"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.7"
            app:layout_constraintHorizontal_bias="0.68"
            app:srcCompat="@drawable/delete"
            style="?android:attr/borderlessButtonStyle"
            android:contentDescription="delete" />

        <ImageButton
            android:id="@+id/unlock_face_id"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@color/blue_sky"
            android:contentDescription="face_id"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.32"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.7"
            app:srcCompat="@drawable/face_id" />

        <Button
            android:id="@+id/forgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_light_font_and_elem"
            android:backgroundTint="@color/blue_sky"
            android:textStyle="bold"
            android:text="@string/forgot"
            android:textSize="12sp"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.77"
            app:layout_constraintHorizontal_bias="0.5"
            style="?android:attr/borderlessButtonStyle"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/auth"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@color/main_light_font_and_elem"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintHorizontal_bias="0.5"
            >
        </TextView>
        <EditText
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="12"
            android:inputType="phone"
            android:digits="0123456789+"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.4"/>
        <EditText
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"/>
        <Button
            android:id="@+id/sing_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_light_font_and_elem"
            android:backgroundTint="@color/blue_sky"
            android:textStyle="bold"
            android:text="@string/sing_in"
            android:textSize="16sp"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.77"
            app:layout_constraintHorizontal_bias="0.72"
            style="?android:attr/borderlessButtonStyle"
            />
        <Button
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_light_font_and_elem"
            android:backgroundTint="@color/blue_sky"
            android:textStyle="bold"
            android:text="@string/register"
            android:textSize="16sp"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.77"
            app:layout_constraintHorizontal_bias="0.3"
            style="?android:attr/borderlessButtonStyle"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>